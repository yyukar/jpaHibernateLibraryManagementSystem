<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="practicelibrarymanagementsystem">
        <class>entity.Author</class>
        <class>entity.Book</class>
        <class>entity.BookBorrowing</class>
        <class>entity.Category</class>
        <class>entity.Publisher</class>
        <properties>

            <!-- Veritabanı Driver ve URL Ayarları -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/practicelibrarymanagementsystem"/>

            <!-- Hibernate Show SQL Ayarı -->
            <property name="hibernate.show_sql" value="true"/>

            <!-- Veritabanını Droplama ve Yeniden Oluşturma Ayarı -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

        </properties>
    </persistence-unit>
</persistence>

